@{
    ViewData["Title"] = "Edit / Category";
}

@model AmazonMVC.DTO.UpdateCategoryDTO

<div class="text-center">
    <h1 class="display-4"><b>Edit Category</b></h1>

</div>

<form asp-controller="Category" asp-action="EditCategoryForm">
    <div class="form-group">
        <input type="hidden" asp-for="Id"></input>
    </div>

    <div class="form-group">
        <label class="mt-4">Name</label>
        <input class="form-control" type="text" placeholder="Edit Name" asp-for="Name"></input>
    </div>

    <button class="btn btn-primary" type="submit">Ok</button>
</form>
